---
import Mylayoutmember from "../layouts/Mylayoutmember.astro";
import Card from "../components/Card.astro";
import Navigation from "../components/Navigation.astro";
---

<Mylayoutmember title="Welcome to Astro">
    <main>
        <Navigation />
        <h1>全天下最完美的阵容</h1>
        <picture>
            <img src="src/pages/image/monster.png" alt="怪兽温尚翊" />
            <img src="src/pages/image/masa.png" alt="玛莎蔡昇晏" />
            <img src="src/pages/image/ashin.png" alt="阿信陈信宏" />
            <img src="src/pages/image/ming.png" alt="冠佑刘谚明" />
            <img src="src/pages/image/stone.png" alt="石头石锦航" />
        </picture>
    </main>

    <li class="link-card" style="display: block;">
        <Card
            href="https://weibo.com/u/1691327452"
            title="Monster怪兽（温尚翊）"
            body="五月天团长兼吉他手🎸"
        />
        <Card
            href="https://weibo.com/u/2662321241"
            title="Stone石头（石锦航）"
            body="五月天吉他手🎸"
        />
        <Card
            href="https://weibo.com/u/2661627953"
            title="Masa玛莎（蔡昇晏）"
            body="五月天贝斯手"
        />
        <Card
            href="https://weibo.com/u/2263684130"
            title="Ming冠佑（刘谚明）"
            body="五月天鼓手🥁"
        />
        <Card
            href="https://weibo.com/u/1265020392"
            title="Ashin阿信（陈信宏）"
            body="五月天主唱🎤"
        >
            <style>
                main {
                    margin: auto;
                    padding: 1rem;
                    width: 800px;
                    max-width: calc(100% - 2rem);
                    color: white;
                    font-size: 20px;
                    line-height: 1.6;
                }
                .astro-a {
                    position: absolute;
                    top: -32px;
                    left: 50%;
                    transform: translatex(-50%);
                    width: 220px;
                    height: auto;
                    z-index: -1;
                }
                h1 {
                    font-size: 3rem;
                    font-weight: 700;
                    line-height: 1;
                    text-align: center;
                    margin-bottom: 1em;
                }
                .text-gradient {
                    background-image: var(--accent-gradient);
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;
                    background-size: 400%;
                    background-position: 0%;
                }
                .instructions {
                    margin-bottom: 2rem;
                    border: 1px solid rgba(var(--accent-light), 25%);
                    background: linear-gradient(
                        rgba(var(--accent-dark), 66%),
                        rgba(var(--accent-dark), 33%)
                    );
                    padding: 1.5rem;
                    border-radius: 8px;
                }
                .instructions code {
                    font-size: 0.8em;
                    font-weight: bold;
                    background: rgba(var(--accent-light), 12%);
                    color: rgb(var(--accent-light));
                    border-radius: 4px;
                    padding: 0.3em 0.4em;
                }
                .instructions strong {
                    color: rgb(var(--accent-light));
                }
                .link-card-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
                    gap: 2rem;
                    padding: 0;
                }
                picture {
                    display: flex;
                    height: 100px;
                    display: block;
                    margin-left: auto;
                    margin-right: auto;
                    margin-bottom: 1em;
                    display: flex; /* 使用Flexbox布局 */
                    justify-content: space-between; /* 使列表项之间的间距平均分布 */
                }
            </style>
        </Card>
    </li>
</Mylayoutmember>
