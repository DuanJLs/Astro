---
import Mylayoutych from "../layouts/Mylayoutych.astro";
import Card from "../components/Card.astro";
import Navigation from "../components/Navigation.astro";
---

<Mylayoutych title="五月天演唱会">
    <main>
        <Navigation />
        <h1>加入五月天永远不会太迟!</h1>
        <h1>🖐️🖐️🖐️🖐️🖐️</h1>
        <p class="instructions">
            "拿起荧光棒"<br />
            让我们<strong>Party party all night</strong> ❗❗❗❗❗
        </p>
        <ul></ul>

        <ul role="list" class="link-card-grid">
            <Card
                href="/md/maydayych"
                title="五月天演唱会记录（部分）"
                body="数据来源微博@MAYDAY转眼记录册"
            />
            <Card
                href="/md/ychzn"
                title="五月天演唱会观看指南"
                body="新来的wmls可以知道看演唱会时的一些默契"
            />
        </ul>
    </main>
</Mylayoutych>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }

    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .instructions {
        margin-bottom: 2rem;
        border: 1px solid rgba(var(--accent-light), 25%);
        background: linear-gradient(
            rgba(var(--accent-dark), 66%),
            rgba(var(--accent-dark), 33%)
        );
        padding: 1.5rem;
        border-radius: 8px;
        text-align: center;
        font-size: xx-large;
        color: rgb(0, 136, 255);
    }
    .instructions code {
        font-size: 10em;
        font-weight: bold;
        background: rgba(var(--accent-light), 12%);
        color: aliceblue;
        border-radius: 4px;
        padding: 0.3em 0.4em;
    }
    .instructions strong {
        color: rgb(var(--accent-light));
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }
    p {
        font-size: larger;
    }
</style>
